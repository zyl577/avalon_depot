<h1>Your Pragmatic Catalog </h1>
<% @products.each do |product| -%>
  <div class="entry">
	<%= link_to image_tag(product.image_url), 
		:action => 'add_to_cart', 
		:id => product,
		:method => 'post',
		:confirm => "Do you want to add it to cart?"
	%>
    <h3><%=h product.title %>
	<%= button_to 'Add to Cart', :action => 'add_to_cart', :id => product %></h3>	
    <%= product.description %>
	
    <div class="price-line">
    <span class="price"><%= number_to_currency(product.price, :precision=>2, :unit=>"ï¿¥") %></span>
    </div>
  </div>
<% end %>
